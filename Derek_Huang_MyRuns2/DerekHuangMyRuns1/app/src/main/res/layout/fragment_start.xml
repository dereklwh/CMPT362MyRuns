<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/input_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Type"
            android:textSize="15dp"
            android:layout_margin="7dp"/>

        <Spinner
            android:id="@+id/input_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/ui_input_type_spinner"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/activity_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Activity Type"
            android:textSize="15dp"
            android:focusable="false"
            android:layout_margin="7dp"/>

        <Spinner
            android:id="@+id/activity_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/ui_activity_type_spinner"
            android:focusable="false"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="125dp"
            android:text="START"
            android:onClick="onStartButtonClicked"/>

    </LinearLayout>

</FrameLayout>